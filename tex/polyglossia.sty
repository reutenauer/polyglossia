    #1 / totalhyphenmin
      .value_required:n = false,
    % frenchspacing
    #1 / frenchspacing  .bool_gset:c = g__xpg_#1_fs_bool ,
    #1 / frenchspacing  .default:n = true ,
    #1 / frenchspacing  .initial:n = false ,
    % indent first line
