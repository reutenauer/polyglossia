        \ifnum#1<\@m\expandafter\cyr@Num@iii\number#1%
        \else
          \ifnum#1<\@M\expandafter\cyr@Num@iv\number#1%
          \else
            \ifnum#1<100000\expandafter\cyr@Num@v\number#1%
