\providebool{slovenian@localalph}
\define@boolkey{slovenian}[slovenian@]{localalph}[false]{%
  \def\@tmpa{#1}%
  \def\@tmptrue{true}%
  \ifx\@tmpa\@tmptrue
    \slovenian@localalphtrue
  \fi
  \setlocalalph
}


